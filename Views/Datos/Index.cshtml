@model mycursoapp.Models.Datos
@{
    ViewData["Title"] = "Datos";
}
<h4>Datos del Curso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            
             <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <select asp-for="Categoria" class="form-control">
                    <option value="">::: Seleccione :::</option> 
                    <option value="Informática">Informática</option> 
                    <option value="Idiomas">Idiomas</option>
                    <option value="Salud">Salud</option>
                    <option value="Otros">Otros</option>
                </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Creditos" class="control-label"></label>
                <input asp-for="Creditos" class="form-control" />
                <span asp-validation-for="Creditos" class="text-danger"></span>
            </div>

           <div class="form-group">
                <label asp-for="Modalidad" class="control-label">Modalidad:</label><br>
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Modalidad" value="Presencial" class="form-check-input" />
                    <label class="form-check-label" for="Modalidad_Presencial">Presencial</label>
                </div>

                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Modalidad" value="Remoto" class="form-check-input" />
                    <label class="form-check-label" for="Modalidad_Remoto">Remoto</label>
                </div>
                <span asp-validation-for="Modalidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">¿Qué incluye?</label><br>
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IncluyeMaterial" /> @Html.DisplayNameFor(model => model.IncluyeMaterial)
                    </label>
                </div>

                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IncluyeVideos" /> @Html.DisplayNameFor(model => model.IncluyeVideos)
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Horas" class="control-label"></label>
                <input asp-for="Horas" class="form-control" />
                <span asp-validation-for="Horas" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
          <p>@ViewData["Message"]</p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

